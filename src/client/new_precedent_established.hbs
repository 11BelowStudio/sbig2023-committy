<!DOCTYPE html>
<html>
    <head>
        <title>Committy!</title>
        <style>

            @import "/assets/fonts/Ruthie.css";

            
            
            marquee.slide{
                behavior: slide; 
            }

            .mid{
                display: flex;
                flex-direction: column;
                justify-content: flex-start;
                align-items: center;
                text-align: center;
            }
            
            html, body {
                min-height: 100%;
                margin: 0;
            }

            .bigMarq{
                font-family: Ruthie, fantasy, "Times New Roman", Times, serif;
                width: 100%;
                min-height: 100%;
                height: max(100%, 100vh);
                display: block;
                box-sizing: border-box;
                align-content: center;
                padding-left: 10%;
                padding-right: 10%;
                top: 0;
                left: 0;
                bottom: 0;
                right: 0;

                vspace: 0px;
                font-size: 1.5em;
            }

            .bigMarq .mid{
                width: 100%;
                text-align: center;
            }

            .bigMarq h1{
                font-size: 1.5em;
                z-index: 10;
            }

            .bigMarq p{
                font-size: 1.35em;
                z-index: 10;
            }

            .bigMarq .just {
                width: 100%;
                text-align: justify;
                
            }

            .scroller{
                font-family: Ruthie, fantasy, "Times New Roman", Times, serif;
                width: 100%;
                min-height: 100%;
                height: max(100%, 100vh);
                display: block;
                box-sizing: border-box;
                align-content: center;
                padding-left: 10%;
                padding-right: 10%;
                top: 0;
                left: 0;
                bottom: 0;
                right: 0;

                vspace: 0px;
                font-size: 1.5em;
            }

            

            @keyframes scroll_frames {
                
                from {
                    /*
                    TODO: start with everything off-screen
                    */
                    transform: translateY(200%);

                    /*
                    top: 100%;
                    bottom: -100%;
                    */
                }

                to {

                    transform: translateY(0%);
                    /*
                    top: 0%;
                    bottom: 0%;
                    */
                }
            }

            .scroller_container {
                display: block;
                position: absolute;

                animation-name: scroll_frames;
                animation-duration: 60s;
                animation-timing-function: linear;
                
                
            }

            .scroller .mid{
                width: 100%;
                text-align: center;
            }

            .scroller h1{
                font-size: 1.5em;
                z-index: 10;
            }

            .scroller p{
                font-size: 1.35em;
                z-index: 10;
            }

            .scroller .just {
                width: 100%;
                text-align: justify;
                
            }

            #veryproper {
                
                display: block;
                

                width: 1000%;
                height: 1000%;
        
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                padding-top: 100%; 
                
                
                background-repeat: tiled;
                z-index:-100;
                object-position:  center;

                background-image: url("/assets/img/old-parchment.jpg");
        
                position: fixed;
                
            }
      
        </style>
    </head>
